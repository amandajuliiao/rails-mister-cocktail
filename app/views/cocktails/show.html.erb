<h1><%= @cocktail.name %></h1>
<p><%= link_to "Back to all cocktails", root_path %></p>
<p><%= link_to 'Add a receipt to your cocktail', new_cocktail_dose_path(@cocktail) %></p>

<% @cocktail.doses.each do |dose| %>
 <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <p><%= dose.amount %></p>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
  <% end %>
<% end %>




